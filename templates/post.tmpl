<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>{{ .post.Title }}</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Roboto+Mono" rel="stylesheet" type="text/css">
    <link href="/static/grids-responsive-min.css" rel="stylesheet" />
    <link href="/static/style.css" rel="stylesheet" />
    {{ if .gitalk.Enabled }}
    <link rel="stylesheet" href="https://unpkg.com/gitalk/dist/gitalk.css">
    {{ end }}
    <link rel="icon" href="/static/favicon.gif">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
    <div class="pure-g">
        <div class="pure-u-1 pure-u-md-1-4">
            <a href="/">‚Üê Back</a>
        </div>
        <div class="pure-u-1 pure-u-md-1-2">
            <div class="head">
                {{ if .post.Banner }}<img src="{{ .post.Banner }}" alt="banner">{{ end }}
                <h1 class="title">{{ .post.Title }}</h1>
                {{ if .post.Description }}<p>{{ .post.Description }}</p>{{ end }}
                {{ range .post.Tags }}<a href="/tag/{{ . }}"><span class="sm-tag">{{ . }}</span></a>{{ end }}
            </div>
            <div class="md">
                {{ .post.Markdown }}
            </div>
            <div class="footerinfo">
                {{ .post.DateFmt }}{{ if .post.Author }} - {{ .post.Author }}{{ end }} - <a href="/post/{{ .post.Slug }}/raw">Raw Markdown</a>
            </div>
            {{ if .gitalk.Enabled }}
            <div id="gitalk-container"></div>
            {{ end }}
        </div>
    </div>
    {{ if .gitalk.Enabled }}
    <script id="gt" defer src="https://unpkg.com/gitalk/dist/gitalk.min.js"></script>
    <script defer>
        var tags = ['Gitalk']
        {{ range .post.Tags }}
        tags.push('{{ . }}');
        {{ end }}
        var script = document.querySelector('#gt');
        script.addEventListener('load', function() {
            const gitalk = new Gitalk({
                clientID: '{{ .gitalk.ClientID}}',
                clientSecret: '{{ .gitalk.ClientSecret }}',
                id: '{{ .post.Slug }}',
                repo: '{{ .gitalk.Repo}}',
                owner: '{{ .gitalk.Owner }}',
                admin: [{{ range .gitalk.Admin }}'{{ . }}',{{ end }}],
                labels: tags,
                body: "This is the comment issue for the [{{ .post.Title }}]("+location.href+") article.",
                distractionFreeMode: false
            })
            gitalk.render('gitalk-container');
        });
    </script>
    {{ end }}
</body>

</html>
